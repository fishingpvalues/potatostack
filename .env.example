OAUTH2_PROXY_EMAIL_DOMAINS=*
OAUTH2_PROXY_COOKIE_DOMAINS=.local.domain
OAUTH2_PROXY_WHITELIST_DOMAINS=.local.domain

################################################################################
# DASHBOARD & MANAGEMENT
