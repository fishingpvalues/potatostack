{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "Europe/Berlin",
  "schedule": ["every weekend"],
  "labels": ["dependencies", "renovate"],
  "assignees": ["@me"],
  "commitMessagePrefix": "chore(deps):",
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "stabilityDays": 3,
  "packageRules": [
    {
      "description": "Helm chart updates",
      "matchDatasources": ["helm"],
      "rangeStrategy": "bump",
      "commitMessageTopic": "Helm chart {{depName}}",
      "automerge": false
    },
    {
      "description": "Docker image updates",
      "matchDatasources": ["docker"],
      "rangeStrategy": "pin",
      "commitMessageTopic": "Docker image {{depName}}",
      "automerge": false,
      "separateMinorPatch": true
    },
    {
      "description": "Automerge patch updates for stable images",
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["patch"],
      "matchPackagePatterns": [
        "^ghcr.io/gethomepage/homepage",
        "^grafana/grafana",
        "^prom/prometheus",
        "^redis",
        "^postgres"
      ],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "merge-commit"
    },
    {
      "description": "Group Prometheus stack updates",
      "matchPackagePatterns": ["prometheus", "grafana", "loki"],
      "groupName": "monitoring-stack",
      "automerge": false
    },
    {
      "description": "ARM64 compatibility check",
      "matchPackagePatterns": [".*"],
      "allowedVersions": "!/amd64-only/"
    }
  ],
  "helmv3": {
    "fileMatch": ["^helm/values/.+\\.yaml$"]
  },
  "kubernetes": {
    "fileMatch": ["^k8s/.+\\.yaml$", "^helm/values/.+\\.yaml$"]
  },
  "regexManagers": [
    {
      "fileMatch": ["^helm/values/.+\\.yaml$"],
      "matchStrings": [
        "repository:\\s+(?<depName>.*?)\\n\\s+tag:\\s+(?<currentValue>.*)"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"],
    "assignees": ["@me"]
  }
}
