{
  "dashboard": {
    "id": null,
    "uid": "node-exporter-use",
    "title": "Infrastructure - USE Method",
    "tags": ["node-exporter", "use", "infrastructure", "sota-2025"],
    "timezone": "browser",
    "schemaVersion": 39,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "collapsed": false,
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 0},
        "id": 1,
        "panels": [],
        "title": "System Overview",
        "type": "row"
      },
      {
        "datasource": "Prometheus",
        "description": "CPU cores",
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {"mode": "absolute", "steps": [{"value": null, "color": "green"}]}
          }
        },
        "gridPos": {"h": 3, "w": 4, "x": 0, "y": 1},
        "id": 2,
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "justifyMode": "auto",
          "orientation": "horizontal",
          "reduceOptions": {"values": false, "calcs": ["lastNotNull"], "fields": ""},
          "textMode": "value_and_name"
        },
        "targets": [{"expr": "count(count(node_cpu_seconds_total{instance=\"$instance\"}) by (cpu))", "refId": "A"}],
        "title": "CPUs",
        "type": "stat"
      },
      {
        "datasource": "Prometheus",
        "description": "Total RAM",
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "thresholds": {"mode": "absolute", "steps": [{"value": null, "color": "green"}]}
          }
        },
        "gridPos": {"h": 3, "w": 4, "x": 4, "y": 1},
        "id": 3,
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "justifyMode": "auto",
          "orientation": "horizontal",
          "reduceOptions": {"values": false, "calcs": ["lastNotNull"], "fields": ""},
          "textMode": "value_and_name"
        },
        "targets": [{"expr": "node_memory_MemTotal_bytes{instance=\"$instance\"}", "refId": "A"}],
        "title": "Memory",
        "type": "stat"
      },
      {
        "datasource": "Prometheus",
        "description": "Uptime",
        "fieldConfig": {
          "defaults": {
            "unit": "dtdurations",
            "thresholds": {"mode": "absolute", "steps": [{"value": null, "color": "green"}]}
          }
        },
        "gridPos": {"h": 3, "w": 4, "x": 8, "y": 1},
        "id": 4,
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "horizontal",
          "reduceOptions": {"values": false, "calcs": ["lastNotNull"], "fields": ""},
          "textMode": "value"
        },
        "targets": [{"expr": "time() - node_boot_time_seconds{instance=\"$instance\"}", "refId": "A"}],
        "title": "Uptime",
        "type": "stat"
      },
      {
        "datasource": "Prometheus",
        "description": "CPU utilization",
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 70, "color": "yellow"},
                {"value": 90, "color": "red"}
              ]
            }
          }
        },
        "gridPos": {"h": 3, "w": 4, "x": 12, "y": 1},
        "id": 5,
        "options": {
          "orientation": "horizontal",
          "reduceOptions": {"values": false, "calcs": ["lastNotNull"], "fields": ""},
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "targets": [{"expr": "100 - (avg(irate(node_cpu_seconds_total{instance=\"$instance\",mode=\"idle\"}[5m])) * 100)", "refId": "A"}],
        "title": "CPU %",
        "type": "gauge"
      },
      {
        "datasource": "Prometheus",
        "description": "Memory utilization",
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 80, "color": "yellow"},
                {"value": 95, "color": "red"}
              ]
            }
          }
        },
        "gridPos": {"h": 3, "w": 4, "x": 16, "y": 1},
        "id": 6,
        "options": {
          "orientation": "horizontal",
          "reduceOptions": {"values": false, "calcs": ["lastNotNull"], "fields": ""},
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "targets": [{"expr": "(1 - (node_memory_MemAvailable_bytes{instance=\"$instance\"} / node_memory_MemTotal_bytes{instance=\"$instance\"})) * 100", "refId": "A"}],
        "title": "Memory %",
        "type": "gauge"
      },
      {
        "datasource": "Prometheus",
        "description": "Disk utilization",
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 80, "color": "yellow"},
                {"value": 95, "color": "red"}
              ]
            }
          }
        },
        "gridPos": {"h": 3, "w": 4, "x": 20, "y": 1},
        "id": 7,
        "options": {
          "orientation": "horizontal",
          "reduceOptions": {"values": false, "calcs": ["lastNotNull"], "fields": ""},
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "targets": [{"expr": "avg((1 - (node_filesystem_avail_bytes{instance=\"$instance\",fstype!~\"tmpfs|fuse.*\"} / node_filesystem_size_bytes{instance=\"$instance\",fstype!~\"tmpfs|fuse.*\"})) * 100)", "refId": "A"}],
        "title": "Disk %",
        "type": "gauge"
      },
      {
        "collapsed": false,
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 4},
        "id": 8,
        "panels": [],
        "title": "CPU - Utilization & Saturation",
        "type": "row"
      },
      {
        "datasource": "Prometheus",
        "description": "CPU utilization by mode",
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "custom": {"fillOpacity": 15, "lineWidth": 1, "stacking": {"mode": "normal"}}
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 5},
        "id": 9,
        "options": {
          "legend": {"displayMode": "table", "placement": "bottom", "showLegend": true, "calcs": ["mean", "max"]},
          "tooltip": {"mode": "multi", "sort": "desc"}
        },
        "targets": [
          {"expr": "avg(irate(node_cpu_seconds_total{instance=\"$instance\",mode!=\"idle\"}[5m])) by (mode) * 100", "legendFormat": "{{mode}}", "refId": "A"}
        ],
        "title": "CPU Utilization",
        "type": "timeseries"
      },
      {
        "datasource": "Prometheus",
        "description": "Load average per core. >1.0 = CPU saturation",
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 2, "color": "red"}
              ]
            },
            "custom": {"fillOpacity": 20, "lineWidth": 2}
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 5},
        "id": 10,
        "options": {
          "legend": {"displayMode": "list", "placement": "bottom", "showLegend": true, "calcs": ["mean", "lastNotNull"]},
          "tooltip": {"mode": "multi", "sort": "desc"}
        },
        "targets": [
          {"expr": "node_load1{instance=\"$instance\"} / count(count(node_cpu_seconds_total{instance=\"$instance\"}) by (cpu))", "legendFormat": "1m", "refId": "A"},
          {"expr": "node_load5{instance=\"$instance\"} / count(count(node_cpu_seconds_total{instance=\"$instance\"}) by (cpu))", "legendFormat": "5m", "refId": "B"},
          {"expr": "node_load15{instance=\"$instance\"} / count(count(node_cpu_seconds_total{instance=\"$instance\"}) by (cpu))", "legendFormat": "15m", "refId": "C"}
        ],
        "title": "CPU Saturation",
        "type": "timeseries"
      },
      {
        "collapsed": false,
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 13},
        "id": 11,
        "panels": [],
        "title": "Memory - Utilization & Saturation",
        "type": "row"
      },
      {
        "datasource": "Prometheus",
        "description": "Memory utilization breakdown",
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "custom": {"fillOpacity": 10, "lineWidth": 1, "stacking": {"mode": "normal"}}
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 14},
        "id": 12,
        "options": {
          "legend": {"displayMode": "table", "placement": "bottom", "showLegend": true, "calcs": ["mean", "lastNotNull"]},
          "tooltip": {"mode": "multi", "sort": "desc"}
        },
        "targets": [
          {"expr": "node_memory_MemTotal_bytes{instance=\"$instance\"} - node_memory_MemAvailable_bytes{instance=\"$instance\"}", "legendFormat": "Used", "refId": "A"},
          {"expr": "node_memory_Cached_bytes{instance=\"$instance\"}", "legendFormat": "Cached", "refId": "B"},
          {"expr": "node_memory_Buffers_bytes{instance=\"$instance\"}", "legendFormat": "Buffers", "refId": "C"},
          {"expr": "node_memory_MemFree_bytes{instance=\"$instance\"}", "legendFormat": "Free", "refId": "D"}
        ],
        "title": "Memory Utilization",
        "type": "timeseries"
      },
      {
        "datasource": "Prometheus",
        "description": "Swap usage indicates memory saturation",
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 1048576, "color": "yellow"},
                {"value": 104857600, "color": "red"}
              ]
            },
            "custom": {"fillOpacity": 20, "lineWidth": 2}
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 14},
        "id": 13,
        "options": {
          "legend": {"displayMode": "list", "placement": "bottom", "showLegend": true, "calcs": ["mean", "max"]},
          "tooltip": {"mode": "multi", "sort": "desc"}
        },
        "targets": [
          {"expr": "node_memory_SwapTotal_bytes{instance=\"$instance\"} - node_memory_SwapFree_bytes{instance=\"$instance\"}", "legendFormat": "Swap Used", "refId": "A"}
        ],
        "title": "Memory Saturation (Swap)",
        "type": "timeseries"
      },
      {
        "collapsed": false,
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 22},
        "id": 14,
        "panels": [],
        "title": "Disk - Utilization & Saturation",
        "type": "row"
      },
      {
        "datasource": "Prometheus",
        "description": "Filesystem space utilization",
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 80, "color": "yellow"},
                {"value": 95, "color": "red"}
              ]
            },
            "custom": {"fillOpacity": 10, "lineWidth": 2}
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 23},
        "id": 15,
        "options": {
          "legend": {"displayMode": "table", "placement": "bottom", "showLegend": true, "calcs": ["lastNotNull"]},
          "tooltip": {"mode": "multi", "sort": "desc"}
        },
        "targets": [{"expr": "(1 - (node_filesystem_avail_bytes{instance=\"$instance\",fstype!~\"tmpfs|fuse.*\"} / node_filesystem_size_bytes{instance=\"$instance\",fstype!~\"tmpfs|fuse.*\"})) * 100", "legendFormat": "{{mountpoint}}", "refId": "A"}],
        "title": "Disk Utilization",
        "type": "timeseries"
      },
      {
        "datasource": "Prometheus",
        "description": "Disk I/O saturation (% time doing I/O)",
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 0.8, "color": "yellow"},
                {"value": 0.95, "color": "red"}
              ]
            },
            "custom": {"fillOpacity": 20, "lineWidth": 2}
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 23},
        "id": 16,
        "options": {
          "legend": {"displayMode": "table", "placement": "bottom", "showLegend": true, "calcs": ["mean", "max"]},
          "tooltip": {"mode": "multi", "sort": "desc"}
        },
        "targets": [{"expr": "rate(node_disk_io_time_seconds_total{instance=\"$instance\"}[5m])", "legendFormat": "{{device}}", "refId": "A"}],
        "title": "Disk Saturation",
        "type": "timeseries"
      },
      {
        "datasource": "Prometheus",
        "description": "Disk throughput",
        "fieldConfig": {
          "defaults": {
            "unit": "Bps",
            "custom": {"fillOpacity": 10, "lineWidth": 1}
          }
        },
        "gridPos": {"h": 7, "w": 12, "x": 0, "y": 31},
        "id": 17,
        "options": {
          "legend": {"displayMode": "table", "placement": "bottom", "showLegend": true, "calcs": ["mean", "max"]},
          "tooltip": {"mode": "multi", "sort": "desc"}
        },
        "targets": [
          {"expr": "sum(rate(node_disk_read_bytes_total{instance=\"$instance\"}[5m]))", "legendFormat": "Read", "refId": "A"},
          {"expr": "sum(rate(node_disk_written_bytes_total{instance=\"$instance\"}[5m]))", "legendFormat": "Write", "refId": "B"}
        ],
        "title": "Disk I/O",
        "type": "timeseries"
      },
      {
        "datasource": "Prometheus",
        "description": "Disk IOPS",
        "fieldConfig": {
          "defaults": {
            "unit": "iops",
            "custom": {"fillOpacity": 10, "lineWidth": 1}
          }
        },
        "gridPos": {"h": 7, "w": 12, "x": 12, "y": 31},
        "id": 18,
        "options": {
          "legend": {"displayMode": "table", "placement": "bottom", "showLegend": true, "calcs": ["mean", "max"]},
          "tooltip": {"mode": "multi", "sort": "desc"}
        },
        "targets": [
          {"expr": "sum(rate(node_disk_reads_completed_total{instance=\"$instance\"}[5m]))", "legendFormat": "Read IOPS", "refId": "A"},
          {"expr": "sum(rate(node_disk_writes_completed_total{instance=\"$instance\"}[5m]))", "legendFormat": "Write IOPS", "refId": "B"}
        ],
        "title": "Disk IOPS",
        "type": "timeseries"
      },
      {
        "collapsed": false,
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 38},
        "id": 19,
        "panels": [],
        "title": "Network - Utilization & Errors",
        "type": "row"
      },
      {
        "datasource": "Prometheus",
        "description": "Network bandwidth utilization",
        "fieldConfig": {
          "defaults": {
            "unit": "Bps",
            "custom": {"fillOpacity": 10, "lineWidth": 2}
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 39},
        "id": 20,
        "options": {
          "legend": {"displayMode": "table", "placement": "bottom", "showLegend": true, "calcs": ["mean", "max", "lastNotNull"]},
          "tooltip": {"mode": "multi", "sort": "desc"}
        },
        "targets": [
          {"expr": "sum(rate(node_network_receive_bytes_total{instance=\"$instance\",device!~\"lo\"}[5m]))", "legendFormat": "RX", "refId": "A"},
          {"expr": "sum(rate(node_network_transmit_bytes_total{instance=\"$instance\",device!~\"lo\"}[5m]))", "legendFormat": "TX", "refId": "B"}
        ],
        "title": "Network Utilization",
        "type": "timeseries"
      },
      {
        "datasource": "Prometheus",
        "description": "Network errors and drops",
        "fieldConfig": {
          "defaults": {
            "unit": "pps",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 10, "color": "red"}
              ]
            },
            "custom": {"fillOpacity": 10, "lineWidth": 1}
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 39},
        "id": 21,
        "options": {
          "legend": {"displayMode": "table", "placement": "bottom", "showLegend": true, "calcs": ["lastNotNull", "max"]},
          "tooltip": {"mode": "multi", "sort": "desc"}
        },
        "targets": [
          {"expr": "sum(rate(node_network_receive_errs_total{instance=\"$instance\",device!~\"lo\"}[5m]))", "legendFormat": "RX Errors", "refId": "A"},
          {"expr": "sum(rate(node_network_transmit_errs_total{instance=\"$instance\",device!~\"lo\"}[5m]))", "legendFormat": "TX Errors", "refId": "B"},
          {"expr": "sum(rate(node_network_receive_drop_total{instance=\"$instance\",device!~\"lo\"}[5m]))", "legendFormat": "RX Drops", "refId": "C"},
          {"expr": "sum(rate(node_network_transmit_drop_total{instance=\"$instance\",device!~\"lo\"}[5m]))", "legendFormat": "TX Drops", "refId": "D"}
        ],
        "title": "Network Errors",
        "type": "timeseries"
      }
    ],
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(node_uname_info, instance)",
          "multi": false,
          "includeAll": false,
          "refresh": 1,
          "sort": 1
        }
      ]
    },
    "time": {"from": "now-6h", "to": "now"},
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    }
  }
}
