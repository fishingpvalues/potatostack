{
  "dashboard": {
    "id": null,
    "uid": "potatostack-overview",
    "title": "PotatoStack System Overview",
    "tags": ["overview", "potatostack", "red", "use", "sota-2025"],
    "timezone": "browser",
    "schemaVersion": 39,
    "version": 2,
    "refresh": "30s",
    "panels": [
      {
        "collapsed": false,
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 0},
        "id": 1,
        "panels": [],
        "title": "System Health - Four Golden Signals",
        "type": "row"
      },
      {
        "datasource": "Prometheus",
        "description": "System uptime since last boot",
        "fieldConfig": {
          "defaults": {
            "unit": "dtdurations",
            "thresholds": {
              "mode": "absolute",
              "steps": [{"value": null, "color": "green"}]
            }
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 1},
        "id": 2,
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "horizontal",
          "reduceOptions": {"values": false, "calcs": ["lastNotNull"], "fields": ""},
          "textMode": "value_and_name"
        },
        "targets": [{"expr": "time() - node_boot_time_seconds{instance=\"$instance\"}", "refId": "A"}],
        "title": "System Uptime",
        "type": "stat"
      },
      {
        "datasource": "Prometheus",
        "description": "Services availability (Blackbox probe success)",
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "red"},
                {"value": 0.95, "color": "orange"},
                {"value": 0.99, "color": "yellow"},
                {"value": 0.999, "color": "green"}
              ]
            }
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 1},
        "id": 3,
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "auto",
          "orientation": "horizontal",
          "reduceOptions": {"values": false, "calcs": ["mean"], "fields": ""},
          "textMode": "value_and_name"
        },
        "targets": [{"expr": "avg(avg_over_time(probe_success{job=~\"blackbox.*\"}[24h]))", "legendFormat": "Avg Uptime", "refId": "A"}],
        "title": "Services Availability (24h)",
        "type": "stat"
      },
      {
        "datasource": "Prometheus",
        "description": "Running containers count",
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [{"value": null, "color": "green"}]
            }
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 1},
        "id": 4,
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "horizontal",
          "reduceOptions": {"values": false, "calcs": ["lastNotNull"], "fields": ""},
          "textMode": "value_and_name"
        },
        "targets": [{"expr": "count(rate(container_cpu_usage_seconds_total{name!=\"\"}[5m]))", "legendFormat": "Containers", "refId": "A"}],
        "title": "Running Containers",
        "type": "stat"
      },
      {
        "datasource": "Prometheus",
        "description": "Total storage capacity",
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "thresholds": {
              "mode": "absolute",
              "steps": [{"value": null, "color": "green"}]
            }
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 1},
        "id": 5,
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "justifyMode": "auto",
          "orientation": "horizontal",
          "reduceOptions": {"values": false, "calcs": ["lastNotNull"], "fields": ""},
          "textMode": "value_and_name"
        },
        "targets": [{"expr": "sum(node_filesystem_size_bytes{instance=\"$instance\",device!~\"rootfs\"})", "refId": "A"}],
        "title": "Total Storage",
        "type": "stat"
      },
      {
        "collapsed": false,
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 5},
        "id": 6,
        "panels": [],
        "title": "USE Method - Utilization, Saturation, Errors",
        "type": "row"
      },
      {
        "datasource": "Prometheus",
        "description": "CPU Utilization (100 - idle%)",
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 70, "color": "yellow"},
                {"value": 90, "color": "red"}
              ]
            },
            "custom": {"fillOpacity": 20, "lineWidth": 2}
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 6},
        "id": 7,
        "options": {
          "legend": {"displayMode": "list", "placement": "bottom", "showLegend": true, "calcs": ["mean", "max"]},
          "tooltip": {"mode": "multi", "sort": "desc"}
        },
        "targets": [{"expr": "100 - (avg by(instance) (irate(node_cpu_seconds_total{instance=\"$instance\",mode=\"idle\"}[5m])) * 100)", "legendFormat": "CPU Utilization", "refId": "A"}],
        "title": "CPU Utilization",
        "type": "timeseries"
      },
      {
        "datasource": "Prometheus",
        "description": "Memory Utilization",
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 80, "color": "yellow"},
                {"value": 95, "color": "red"}
              ]
            },
            "custom": {"fillOpacity": 20, "lineWidth": 2}
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 6},
        "id": 8,
        "options": {
          "legend": {"displayMode": "list", "placement": "bottom", "showLegend": true, "calcs": ["mean", "max"]},
          "tooltip": {"mode": "multi", "sort": "desc"}
        },
        "targets": [{"expr": "(1 - (node_memory_MemAvailable_bytes{instance=\"$instance\"} / node_memory_MemTotal_bytes{instance=\"$instance\"})) * 100", "legendFormat": "Memory Utilization", "refId": "A"}],
        "title": "Memory Utilization",
        "type": "timeseries"
      },
      {
        "datasource": "Prometheus",
        "description": "Disk Utilization",
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 80, "color": "yellow"},
                {"value": 95, "color": "red"}
              ]
            },
            "custom": {"fillOpacity": 20, "lineWidth": 2}
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 6},
        "id": 9,
        "options": {
          "legend": {"displayMode": "list", "placement": "bottom", "showLegend": true, "calcs": ["mean", "max"]},
          "tooltip": {"mode": "multi", "sort": "desc"}
        },
        "targets": [{"expr": "(1 - (node_filesystem_free_bytes{instance=\"$instance\",device!~\"rootfs\"} / node_filesystem_size_bytes{instance=\"$instance\",device!~\"rootfs\"})) * 100", "legendFormat": "{{mountpoint}}", "refId": "A"}],
        "title": "Disk Utilization",
        "type": "timeseries"
      },
      {
        "datasource": "Prometheus",
        "description": "CPU Saturation (load average / CPU cores). >1.0 = saturated",
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 2, "color": "red"}
              ]
            },
            "custom": {"fillOpacity": 20, "lineWidth": 2}
          }
        },
        "gridPos": {"h": 7, "w": 12, "x": 0, "y": 14},
        "id": 10,
        "options": {
          "legend": {"displayMode": "list", "placement": "bottom", "showLegend": true, "calcs": ["mean", "lastNotNull"]},
          "tooltip": {"mode": "multi", "sort": "desc"}
        },
        "targets": [
          {"expr": "node_load1{instance=\"$instance\"} / count(count(node_cpu_seconds_total{instance=\"$instance\",mode=\"idle\"}) by (cpu))", "legendFormat": "Load / CPU (1m)", "refId": "A"},
          {"expr": "node_load5{instance=\"$instance\"} / count(count(node_cpu_seconds_total{instance=\"$instance\",mode=\"idle\"}) by (cpu))", "legendFormat": "Load / CPU (5m)", "refId": "B"},
          {"expr": "node_load15{instance=\"$instance\"} / count(count(node_cpu_seconds_total{instance=\"$instance\",mode=\"idle\"}) by (cpu))", "legendFormat": "Load / CPU (15m)", "refId": "C"}
        ],
        "title": "CPU Saturation (Load per Core)",
        "type": "timeseries"
      },
      {
        "datasource": "Prometheus",
        "description": "Network errors and drops (USE - Errors)",
        "fieldConfig": {
          "defaults": {
            "unit": "pps",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 10, "color": "red"}
              ]
            },
            "custom": {"fillOpacity": 10, "lineWidth": 1}
          }
        },
        "gridPos": {"h": 7, "w": 12, "x": 12, "y": 14},
        "id": 11,
        "options": {
          "legend": {"displayMode": "table", "placement": "bottom", "showLegend": true, "calcs": ["lastNotNull", "max"]},
          "tooltip": {"mode": "multi", "sort": "desc"}
        },
        "targets": [
          {"expr": "sum(rate(node_network_receive_errs_total{instance=\"$instance\",device!~\"lo\"}[5m]))", "legendFormat": "RX Errors", "refId": "A"},
          {"expr": "sum(rate(node_network_transmit_errs_total{instance=\"$instance\",device!~\"lo\"}[5m]))", "legendFormat": "TX Errors", "refId": "B"},
          {"expr": "sum(rate(node_network_receive_drop_total{instance=\"$instance\",device!~\"lo\"}[5m]))", "legendFormat": "RX Drops", "refId": "C"},
          {"expr": "sum(rate(node_network_transmit_drop_total{instance=\"$instance\",device!~\"lo\"}[5m]))", "legendFormat": "TX Drops", "refId": "D"}
        ],
        "title": "Network Errors & Drops",
        "type": "timeseries"
      },
      {
        "collapsed": false,
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 21},
        "id": 12,
        "panels": [],
        "title": "Service Health - RED Method (Rate, Errors, Duration)",
        "type": "row"
      },
      {
        "datasource": "Prometheus",
        "description": "Service probe success rate (1=up, 0=down)",
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            },
            "custom": {"fillOpacity": 30, "lineWidth": 2, "stacking": {"mode": "none"}}
          }
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 22},
        "id": 13,
        "options": {
          "legend": {"displayMode": "table", "placement": "right", "showLegend": true, "calcs": ["mean"]},
          "tooltip": {"mode": "multi", "sort": "none"}
        },
        "targets": [{"expr": "probe_success{job=~\"blackbox.*\"}", "legendFormat": "{{instance}}", "refId": "A"}],
        "title": "Service Availability (Rate)",
        "type": "timeseries"
      },
      {
        "datasource": "Prometheus",
        "description": "HTTP probe duration (Duration in RED)",
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 0.5, "color": "yellow"},
                {"value": 1, "color": "red"}
              ]
            },
            "custom": {"fillOpacity": 10, "lineWidth": 1}
          }
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 30},
        "id": 14,
        "options": {
          "legend": {"displayMode": "table", "placement": "right", "showLegend": true, "calcs": ["mean", "max"]},
          "tooltip": {"mode": "multi", "sort": "desc"}
        },
        "targets": [{"expr": "probe_http_duration_seconds{job=~\"blackbox.*\",phase=\"processing\"}", "legendFormat": "{{instance}}", "refId": "A"}],
        "title": "Service Response Time (Duration)",
        "type": "timeseries"
      },
      {
        "collapsed": false,
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 38},
        "id": 15,
        "panels": [],
        "title": "Storage I/O Performance",
        "type": "row"
      },
      {
        "datasource": "Prometheus",
        "description": "Disk read/write throughput",
        "fieldConfig": {
          "defaults": {
            "unit": "Bps",
            "thresholds": {
              "mode": "absolute",
              "steps": [{"value": null, "color": "green"}]
            },
            "custom": {"fillOpacity": 10, "lineWidth": 1}
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 39},
        "id": 16,
        "options": {
          "legend": {"displayMode": "table", "placement": "bottom", "showLegend": true, "calcs": ["mean", "max"]},
          "tooltip": {"mode": "multi", "sort": "desc"}
        },
        "targets": [
          {"expr": "sum(rate(node_disk_read_bytes_total{instance=\"$instance\"}[5m]))", "legendFormat": "Read", "refId": "A"},
          {"expr": "sum(rate(node_disk_written_bytes_total{instance=\"$instance\"}[5m]))", "legendFormat": "Write", "refId": "B"}
        ],
        "title": "Disk I/O Throughput",
        "type": "timeseries"
      },
      {
        "datasource": "Prometheus",
        "description": "Disk IOPS (I/O operations per second)",
        "fieldConfig": {
          "defaults": {
            "unit": "iops",
            "thresholds": {
              "mode": "absolute",
              "steps": [{"value": null, "color": "green"}]
            },
            "custom": {"fillOpacity": 10, "lineWidth": 1}
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 39},
        "id": 17,
        "options": {
          "legend": {"displayMode": "table", "placement": "bottom", "showLegend": true, "calcs": ["mean", "max"]},
          "tooltip": {"mode": "multi", "sort": "desc"}
        },
        "targets": [
          {"expr": "sum(rate(node_disk_reads_completed_total{instance=\"$instance\"}[5m]))", "legendFormat": "Read IOPS", "refId": "A"},
          {"expr": "sum(rate(node_disk_writes_completed_total{instance=\"$instance\"}[5m]))", "legendFormat": "Write IOPS", "refId": "B"}
        ],
        "title": "Disk IOPS",
        "type": "timeseries"
      },
      {
        "collapsed": false,
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 47},
        "id": 18,
        "panels": [],
        "title": "Network Performance",
        "type": "row"
      },
      {
        "datasource": "Prometheus",
        "description": "Network traffic (bandwidth utilization)",
        "fieldConfig": {
          "defaults": {
            "unit": "Bps",
            "thresholds": {
              "mode": "absolute",
              "steps": [{"value": null, "color": "green"}]
            },
            "custom": {"fillOpacity": 10, "lineWidth": 2}
          }
        },
        "gridPos": {"h": 9, "w": 24, "x": 0, "y": 48},
        "id": 19,
        "options": {
          "legend": {"displayMode": "table", "placement": "bottom", "showLegend": true, "calcs": ["mean", "max", "lastNotNull"]},
          "tooltip": {"mode": "multi", "sort": "desc"}
        },
        "targets": [
          {"expr": "sum(rate(node_network_receive_bytes_total{instance=\"$instance\",device!~\"lo\"}[5m]))", "legendFormat": "Receive", "refId": "A"},
          {"expr": "sum(rate(node_network_transmit_bytes_total{instance=\"$instance\",device!~\"lo\"}[5m]))", "legendFormat": "Transmit", "refId": "B"}
        ],
        "title": "Network Traffic",
        "type": "timeseries"
      }
    ],
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(node_uname_info, instance)",
          "multi": false,
          "includeAll": false,
          "refresh": 1,
          "sort": 1
        }
      ]
    },
    "time": {"from": "now-6h", "to": "now"},
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    }
  }
}
