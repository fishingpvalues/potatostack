# PotatoStack .gitignore

# Environment files (secrets)
.env
.env.*
.envrc

# Kubernetes secrets & credentials
kubeconfig
kubeconfig.*
*.kubeconfig
*-kubeconfig.yaml
credentials-*
*-credentials.yaml
*-credentials.json
sealed-secrets-key-backup.yaml
velero-credentials

# Helm
.helm/
helm/charts/*/charts/
helm/charts/*/Chart.lock
*.tgz

# Kubernetes temporary files
*.yaml.tmp
*.yml.tmp
kustomization.yaml.tmp

# Logs
*.log
logs/
log/
.logs/
test-logs/

# Test and validation reports
stack-test-report-*.txt
validation-report-*.txt
security-scan-report-*.txt
tmp-validation/
*.trivy

# Temporary files
*.tmp
*.swp
*.swo
*~

# OS files
.DS_Store
Thumbs.db

# IDE files
.vscode/
.idea/
*.iml
.history/
.claude/settings.local.json

# Backup files
*.bak
*.backup
*.tar.gz
backup-*.tar.gz
backup.sql
*.sql.gz

# Data directories (legacy Docker)
data/
volumes/
mock-drives/

# Kopia repository (if local)
repository/

# Terraform (if used)
.terraform/
*.tfstate
*.tfstate.backup

# Ansible (if used)
*.retry

error.log

