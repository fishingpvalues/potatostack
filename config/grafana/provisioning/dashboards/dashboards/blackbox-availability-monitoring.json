{
  "dashboard": {
    "id": null,
    "uid": "blackbox-availability",
    "title": "Service Availability & Uptime (Blackbox)",
    "tags": ["blackbox", "availability", "uptime", "sla", "sota-2025"],
    "timezone": "browser",
    "schemaVersion": 39,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "collapsed": false,
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 0},
        "id": 1,
        "panels": [],
        "title": "Service Availability Overview - RED Metrics",
        "type": "row"
      },
      {
        "datasource": "Prometheus",
        "description": "7-day uptime SLA for all monitored services",
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 3,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "red"},
                {"value": 95, "color": "orange"},
                {"value": 99, "color": "yellow"},
                {"value": 99.9, "color": "green"}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 1},
        "id": 2,
        "options": {
          "showHeader": true,
          "sortBy": [{"displayName": "Uptime %", "desc": false}]
        },
        "pluginVersion": "11.0.0",
        "targets": [
          {
            "expr": "avg_over_time(probe_success{job=~\"blackbox.*\"}[7d]) * 100",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "title": "7-Day Uptime SLA",
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "__name__": true, "job": true},
              "renameByName": {"instance": "Service", "Value": "Uptime %"}
            }
          }
        ],
        "type": "table"
      },
      {
        "collapsed": false,
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 9},
        "id": 3,
        "panels": [],
        "title": "SSL Certificate Health",
        "type": "row"
      },
      {
        "datasource": "Prometheus",
        "description": "Days until SSL certificate expiration. Alert at <30 days.",
        "fieldConfig": {
          "defaults": {
            "unit": "days",
            "decimals": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "red"},
                {"value": 30, "color": "orange"},
                {"value": 60, "color": "green"}
              ]
            }
          }
        },
        "gridPos": {"h": 7, "w": 12, "x": 0, "y": 10},
        "id": 4,
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "value_and_name"
        },
        "pluginVersion": "11.0.0",
        "targets": [
          {
            "expr": "(probe_ssl_earliest_cert_expiry{job=~\"blackbox.*\"} - time()) / 86400",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ],
        "title": "SSL Certificate Expiry",
        "type": "stat"
      },
      {
        "datasource": "Prometheus",
        "description": "SSL certificate expiration timeline",
        "fieldConfig": {
          "defaults": {
            "unit": "days",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"}
              ]
            }
          }
        },
        "gridPos": {"h": 7, "w": 12, "x": 12, "y": 10},
        "id": 5,
        "options": {
          "legend": {"displayMode": "table", "placement": "right", "showLegend": true, "calcs": ["lastNotNull"]},
          "tooltip": {"mode": "multi", "sort": "none"}
        },
        "targets": [
          {
            "expr": "(probe_ssl_earliest_cert_expiry{job=~\"blackbox.*\"} - time()) / 86400",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ],
        "title": "SSL Certificate Expiry Trend",
        "type": "timeseries"
      },
      {
        "collapsed": false,
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 17},
        "id": 6,
        "panels": [],
        "title": "Latency & Performance - Duration Metrics",
        "type": "row"
      },
      {
        "datasource": "Prometheus",
        "description": "HTTP probe duration broken down by phase (resolve, connect, TLS, processing, transfer)",
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {"drawStyle": "line", "lineWidth": 1, "fillOpacity": 10, "stacking": {"mode": "normal"}}
          }
        },
        "gridPos": {"h": 9, "w": 24, "x": 0, "y": 18},
        "id": 7,
        "options": {
          "legend": {"displayMode": "table", "placement": "right", "showLegend": true, "calcs": ["mean", "max"]},
          "tooltip": {"mode": "multi", "sort": "desc"}
        },
        "targets": [
          {
            "expr": "probe_http_duration_seconds{job=~\"blackbox.*\",instance=\"$service\"}",
            "legendFormat": "{{phase}}",
            "refId": "A"
          }
        ],
        "title": "HTTP Duration by Phase - $service",
        "type": "timeseries"
      },
      {
        "collapsed": false,
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 27},
        "id": 8,
        "panels": [],
        "title": "Probe Success Rate & Errors",
        "type": "row"
      },
      {
        "datasource": "Prometheus",
        "description": "Real-time probe success rate (1 = up, 0 = down)",
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 28},
        "id": 9,
        "options": {
          "legend": {"displayMode": "list", "placement": "bottom", "showLegend": true},
          "tooltip": {"mode": "multi", "sort": "none"}
        },
        "targets": [
          {
            "expr": "probe_success{job=~\"blackbox.*\"}",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ],
        "title": "Probe Success (All Services)",
        "type": "timeseries"
      },
      {
        "datasource": "Prometheus",
        "description": "HTTP status codes returned by probed services",
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 28},
        "id": 10,
        "options": {
          "legend": {"displayMode": "table", "placement": "right", "showLegend": true, "calcs": ["lastNotNull"]},
          "tooltip": {"mode": "multi", "sort": "none"}
        },
        "targets": [
          {
            "expr": "probe_http_status_code{job=~\"blackbox.*\"}",
            "legendFormat": "{{instance}} - {{status_code}}",
            "refId": "A"
          }
        ],
        "title": "HTTP Status Codes",
        "type": "timeseries"
      },
      {
        "collapsed": false,
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 36},
        "id": 11,
        "panels": [],
        "title": "Advanced Metrics - 95th Percentile Latency",
        "type": "row"
      },
      {
        "datasource": "Prometheus",
        "description": "95th percentile latency over the last 24 hours",
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "decimals": 3,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 0.1, "color": "yellow"},
                {"value": 0.5, "color": "red"}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 37},
        "id": 12,
        "options": {
          "showHeader": true,
          "sortBy": [{"displayName": "p95 Latency", "desc": true}]
        },
        "targets": [
          {
            "expr": "quantile_over_time(0.95, probe_http_duration_seconds{job=~\"blackbox.*\",phase=\"processing\"}[24h])",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "title": "95th Percentile Latency (24h)",
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "__name__": true, "job": true, "phase": true},
              "renameByName": {"instance": "Service", "Value": "p95 Latency"}
            }
          }
        ],
        "type": "table"
      }
    ],
    "templating": {
      "list": [
        {
          "name": "service",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(probe_success{job=~\"blackbox.*\"}, instance)",
          "multi": false,
          "includeAll": false,
          "refresh": 1,
          "sort": 1
        }
      ]
    },
    "time": {"from": "now-6h", "to": "now"},
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    }
  }
}
