{
  "dashboard": {
    "id": null,
    "uid": "containers-red",
    "title": "Container Monitoring - RED Method",
    "tags": ["containers", "docker", "cadvisor", "red", "sota-2025"],
    "timezone": "browser",
    "schemaVersion": 39,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "collapsed": false,
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 0},
        "id": 1,
        "panels": [],
        "title": "Container Overview - Rate & Status",
        "type": "row"
      },
      {
        "datasource": "Prometheus",
        "description": "Total running containers",
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {"mode": "absolute", "steps": [{"value": null, "color": "green"}]}
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 1},
        "id": 2,
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "horizontal",
          "reduceOptions": {"values": false, "calcs": ["lastNotNull"], "fields": ""},
          "textMode": "value_and_name"
        },
        "targets": [{"expr": "count(rate(container_cpu_usage_seconds_total{name!=\"\"}[5m]))", "legendFormat": "Containers", "refId": "A"}],
        "title": "Running Containers",
        "type": "stat"
      },
      {
        "datasource": "Prometheus",
        "description": "Total CPU usage across all containers",
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 70, "color": "yellow"},
                {"value": 90, "color": "red"}
              ]
            }
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 1},
        "id": 3,
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "horizontal",
          "reduceOptions": {"values": false, "calcs": ["lastNotNull"], "fields": ""},
          "textMode": "value_and_name"
        },
        "targets": [{"expr": "sum(rate(container_cpu_usage_seconds_total{name!=\"\"}[5m])) * 100", "legendFormat": "Total CPU", "refId": "A"}],
        "title": "Total Container CPU",
        "type": "stat"
      },
      {
        "datasource": "Prometheus",
        "description": "Total memory usage across all containers",
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "thresholds": {"mode": "absolute", "steps": [{"value": null, "color": "green"}]}
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 1},
        "id": 4,
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "horizontal",
          "reduceOptions": {"values": false, "calcs": ["lastNotNull"], "fields": ""},
          "textMode": "value_and_name"
        },
        "targets": [{"expr": "sum(container_memory_usage_bytes{name!=\"\"})", "legendFormat": "Total Memory", "refId": "A"}],
        "title": "Total Container Memory",
        "type": "stat"
      },
      {
        "datasource": "Prometheus",
        "description": "Total network throughput",
        "fieldConfig": {
          "defaults": {
            "unit": "Bps",
            "thresholds": {"mode": "absolute", "steps": [{"value": null, "color": "green"}]}
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 1},
        "id": 5,
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "horizontal",
          "reduceOptions": {"values": false, "calcs": ["lastNotNull"], "fields": ""},
          "textMode": "value_and_name"
        },
        "targets": [{"expr": "sum(rate(container_network_receive_bytes_total{name!=\"\"}[5m])) + sum(rate(container_network_transmit_bytes_total{name!=\"\"}[5m]))", "legendFormat": "Network", "refId": "A"}],
        "title": "Total Network I/O",
        "type": "stat"
      },
      {
        "collapsed": false,
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 5},
        "id": 6,
        "panels": [],
        "title": "RED Metrics - Rate, Errors, Duration",
        "type": "row"
      },
      {
        "datasource": "Prometheus",
        "description": "Container CPU usage rate (% per container)",
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 50, "color": "yellow"},
                {"value": 80, "color": "red"}
              ]
            },
            "custom": {"fillOpacity": 10, "lineWidth": 1}
          }
        },
        "gridPos": {"h": 9, "w": 24, "x": 0, "y": 6},
        "id": 7,
        "options": {
          "legend": {"displayMode": "table", "placement": "right", "showLegend": true, "calcs": ["mean", "max", "lastNotNull"]},
          "tooltip": {"mode": "multi", "sort": "desc"}
        },
        "targets": [{"expr": "sum(rate(container_cpu_usage_seconds_total{name!=\"\"}[5m])) by (name) * 100", "legendFormat": "{{name}}", "refId": "A"}],
        "title": "Container CPU Rate",
        "type": "timeseries"
      },
      {
        "datasource": "Prometheus",
        "description": "Container memory usage per container",
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "custom": {"fillOpacity": 10, "lineWidth": 1}
          }
        },
        "gridPos": {"h": 9, "w": 12, "x": 0, "y": 15},
        "id": 8,
        "options": {
          "legend": {"displayMode": "table", "placement": "bottom", "showLegend": true, "calcs": ["mean", "max", "lastNotNull"]},
          "tooltip": {"mode": "multi", "sort": "desc"}
        },
        "targets": [{"expr": "container_memory_usage_bytes{name!=\"\"}", "legendFormat": "{{name}}", "refId": "A"}],
        "title": "Container Memory Usage",
        "type": "timeseries"
      },
      {
        "datasource": "Prometheus",
        "description": "Container memory cache usage",
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "custom": {"fillOpacity": 10, "lineWidth": 1}
          }
        },
        "gridPos": {"h": 9, "w": 12, "x": 12, "y": 15},
        "id": 9,
        "options": {
          "legend": {"displayMode": "table", "placement": "bottom", "showLegend": true, "calcs": ["mean", "lastNotNull"]},
          "tooltip": {"mode": "multi", "sort": "desc"}
        },
        "targets": [{"expr": "container_memory_cache{name!=\"\"}", "legendFormat": "{{name}}", "refId": "A"}],
        "title": "Container Memory Cache",
        "type": "timeseries"
      },
      {
        "collapsed": false,
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 24},
        "id": 10,
        "panels": [],
        "title": "Container Resource Utilization",
        "type": "row"
      },
      {
        "datasource": "Prometheus",
        "description": "Network receive/transmit per container",
        "fieldConfig": {
          "defaults": {
            "unit": "Bps",
            "custom": {"fillOpacity": 10, "lineWidth": 1}
          }
        },
        "gridPos": {"h": 9, "w": 12, "x": 0, "y": 25},
        "id": 11,
        "options": {
          "legend": {"displayMode": "table", "placement": "bottom", "showLegend": true, "calcs": ["mean", "max"]},
          "tooltip": {"mode": "multi", "sort": "desc"}
        },
        "targets": [
          {"expr": "sum(rate(container_network_receive_bytes_total{name!=\"\"}[5m])) by (name)", "legendFormat": "{{name}} RX", "refId": "A"},
          {"expr": "sum(rate(container_network_transmit_bytes_total{name!=\"\"}[5m])) by (name)", "legendFormat": "{{name}} TX", "refId": "B"}
        ],
        "title": "Container Network I/O",
        "type": "timeseries"
      },
      {
        "datasource": "Prometheus",
        "description": "Filesystem I/O per container",
        "fieldConfig": {
          "defaults": {
            "unit": "Bps",
            "custom": {"fillOpacity": 10, "lineWidth": 1}
          }
        },
        "gridPos": {"h": 9, "w": 12, "x": 12, "y": 25},
        "id": 12,
        "options": {
          "legend": {"displayMode": "table", "placement": "bottom", "showLegend": true, "calcs": ["mean", "max"]},
          "tooltip": {"mode": "multi", "sort": "desc"}
        },
        "targets": [
          {"expr": "sum(rate(container_fs_reads_bytes_total{name!=\"\"}[5m])) by (name)", "legendFormat": "{{name}} Read", "refId": "A"},
          {"expr": "sum(rate(container_fs_writes_bytes_total{name!=\"\"}[5m])) by (name)", "legendFormat": "{{name}} Write", "refId": "B"}
        ],
        "title": "Container Filesystem I/O",
        "type": "timeseries"
      },
      {
        "collapsed": false,
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 34},
        "id": 13,
        "panels": [],
        "title": "Per-Container Detailed Metrics",
        "type": "row"
      },
      {
        "datasource": "Prometheus",
        "description": "CPU usage for selected container",
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 50, "color": "yellow"},
                {"value": 80, "color": "red"}
              ]
            },
            "custom": {"fillOpacity": 20, "lineWidth": 2}
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 35},
        "id": 14,
        "options": {
          "legend": {"displayMode": "list", "placement": "bottom", "showLegend": true, "calcs": ["mean", "max"]},
          "tooltip": {"mode": "single", "sort": "none"}
        },
        "targets": [{"expr": "sum(rate(container_cpu_usage_seconds_total{name=\"$container\"}[5m])) * 100", "legendFormat": "CPU %", "refId": "A"}],
        "title": "CPU - $container",
        "type": "timeseries"
      },
      {
        "datasource": "Prometheus",
        "description": "Memory usage for selected container",
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "custom": {"fillOpacity": 20, "lineWidth": 2}
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 35},
        "id": 15,
        "options": {
          "legend": {"displayMode": "list", "placement": "bottom", "showLegend": true, "calcs": ["mean", "max"]},
          "tooltip": {"mode": "single", "sort": "none"}
        },
        "targets": [
          {"expr": "container_memory_usage_bytes{name=\"$container\"}", "legendFormat": "Memory", "refId": "A"},
          {"expr": "container_memory_cache{name=\"$container\"}", "legendFormat": "Cache", "refId": "B"}
        ],
        "title": "Memory - $container",
        "type": "timeseries"
      },
      {
        "datasource": "Prometheus",
        "description": "Network I/O for selected container",
        "fieldConfig": {
          "defaults": {
            "unit": "Bps",
            "custom": {"fillOpacity": 10, "lineWidth": 1}
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 43},
        "id": 16,
        "options": {
          "legend": {"displayMode": "list", "placement": "bottom", "showLegend": true, "calcs": ["mean", "max"]},
          "tooltip": {"mode": "multi", "sort": "desc"}
        },
        "targets": [
          {"expr": "sum(rate(container_network_receive_bytes_total{name=\"$container\"}[5m]))", "legendFormat": "RX", "refId": "A"},
          {"expr": "sum(rate(container_network_transmit_bytes_total{name=\"$container\"}[5m]))", "legendFormat": "TX", "refId": "B"}
        ],
        "title": "Network - $container",
        "type": "timeseries"
      },
      {
        "datasource": "Prometheus",
        "description": "Filesystem I/O for selected container",
        "fieldConfig": {
          "defaults": {
            "unit": "Bps",
            "custom": {"fillOpacity": 10, "lineWidth": 1}
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 43},
        "id": 17,
        "options": {
          "legend": {"displayMode": "list", "placement": "bottom", "showLegend": true, "calcs": ["mean", "max"]},
          "tooltip": {"mode": "multi", "sort": "desc"}
        },
        "targets": [
          {"expr": "sum(rate(container_fs_reads_bytes_total{name=\"$container\"}[5m]))", "legendFormat": "Read", "refId": "A"},
          {"expr": "sum(rate(container_fs_writes_bytes_total{name=\"$container\"}[5m]))", "legendFormat": "Write", "refId": "B"}
        ],
        "title": "Filesystem - $container",
        "type": "timeseries"
      }
    ],
    "templating": {
      "list": [
        {
          "name": "container",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(container_cpu_usage_seconds_total{name!=\"\"}, name)",
          "multi": false,
          "includeAll": false,
          "refresh": 1,
          "sort": 1
        }
      ]
    },
    "time": {"from": "now-6h", "to": "now"},
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    }
  }
}
