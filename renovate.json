{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "UTC",
  "schedule": [
    "before 6am on monday"
  ],
  "labels": [
    "dependencies",
    "renovate"
  ],
  "commitMessagePrefix": "chore(deps):",
  "separateMajorMinor": true,
  "separateMinorPatch": false,
  "docker-compose": {
    "fileMatch": [
      "(^|/)docker-compose.*\\.ya?ml$"
    ],
    "enabled": true,
    "pinDigests": true
  },
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": false,
      "groupName": "Docker images (non-major)"
    },
    {
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["major"],
      "groupName": "Docker images (major)",
      "dependencyDashboardApproval": true
    },
    {
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["digest"],
      "automerge": true,
      "groupName": "Docker digests"
    },
    {
      "matchPackageNames": [
        "postgres",
        "mongo",
        "redis"
      ],
      "groupName": "Database images",
      "schedule": [
        "before 6am on the first day of the month"
      ]
    },
    {
      "matchPackageNames": [
        "traefik",
        "crowdsec/crowdsec",
        "gluetun"
      ],
      "groupName": "Network & Security",
      "schedule": [
        "before 6am on monday"
      ]
    },
    {
      "matchPackageNames": [
        "sonarr",
        "radarr",
        "prowlarr",
        "lidarr",
        "readarr",
        "bazarr"
      ],
      "groupName": "*arr stack",
      "schedule": [
        "before 6am on monday"
      ]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security"
    ],
    "assignees": []
  },
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "enabledManagers": [
    "docker-compose",
    "dockerfile"
  ]
}
